{
  "name": "volume-sidechains",
  "license": "UNLICENSED",
  "version": "1.0.0",
  "scripts": {
    "codegen": "graph codegen",
    "build": "graph build",
    "prepare:mainnet": "true",
    "prepare:avalanche": "true",
    "prepare:mainnet": "mustache ../../config/mainnet.json subgraph.template.yaml > subgraph.yaml",
    "prepare:avalanche": "mustache ../../config/avalanche.json subgraph.template.yaml > subgraph.yaml",
    "prepare:fantom": "mustache ../../config/fantom.json subgraph.template.yaml > subgraph.yaml",
    "deploy": "graph deploy --node https://api.thegraph.com/deploy/ convex-community/volume-avalanche",
    "deploy:avalanche": "graph deploy --node https://api.thegraph.com/deploy/ convex-community/volume-avalanche",
    "deploy:fantom": "graph deploy --node https://api.thegraph.com/deploy/ convex-community/volume-fantom"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.22.3",
    "@graphprotocol/graph-ts": "0.22.1"
  }
}
